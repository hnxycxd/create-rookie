{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "strict": true,
    "noUnusedLocals": true,
    "declaration": false,
    "outDir": "dist",
    "sourceMap": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist", "build"]
}
